{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-8">
                <h3>A verification link has been sent to {{ email ? email : 'your email address' }}.</h3>
                <hr>
                <p>Please click on the link that has been sent to your email to complete the registration process.</p>
                <p><a href="{{ path('send_verification') }}" class="text-danger">Resend me the verification link</a></p>
            </div>
        </div>
    </div>
{% endblock %}

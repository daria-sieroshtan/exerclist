{% extends 'base.html.twig' %}

{% block heading %}Track{% endblock %}

{% block content %}
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ track.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ track.name }}</td>
        </tr>
        <tr>
            <th>Author</th>
            <td>{{ track.author }}</td>
        </tr>
        <tr>
            <th>Is private</th>
            <td>{{ track.isPrivate ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Tags</th>
            <td>{{ track.tags | join(', ') }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('track_index') }}" class="btn btn-dark mr-2" role="button"><span class="fa fa-arrow-left text-white" aria-hidden="true" title="back to list"></span></a>
    <a href="{{ path('track_edit', {'id' : track.id}) }}" class="btn btn-dark mr-2" role="button"><span class="fa fa-pencil text-white" aria-hidden="true" title="edit"></span></a>
    <a href="{{ path('track_delete', {'id' : track.id}) }}" class="entity-delete btn btn-dark" role="button"  ><span class="fa fa-trash-o text-white" aria-hidden="true" title="delete"></span></a>

{% endblock %}
